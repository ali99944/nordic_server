                          </div>
                    </div>
                </div>
            </div>
    </div>

        <%- include('../components/footer') %>
    </div>

    <%- include('../components/scripts.ejs') %>
    
    <script src="/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="/plugins/jquery-validation/additional-methods.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="../../plugins/sweetalert2/sweetalert2.min.js"></script>



    <script>
        const createCar = () => {
            var Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });


            $(function () {
  $.validator.setDefaults({
    submitHandler: async function () {
        Toast.fire({
            icon: 'success',
            title: 'Lorem ipsum dolor sit amet, consetetur sadipscing elitr.'
        }).then((result) => {
            console.log(result);
        }).catch((err) => {
            console.log(err.message);
        });
    }
  });
  $('#createCarForm').validate({
    rules: {
      boardNumber: {
        required: true,
      },
      privateNumber: {
        required: true,
      },
      kilometers: {
        required: true
      },
    },
    messages: {
      boardNumber: {
        required: "Please enter a board number",
      },
      privateNumber: {
        required: "Please provide a private number",
      },
      kilometers: "Please enter kilometers",
    },
    errorElement: 'span',
    errorPlacement: function (error, element) {
      error.addClass('invalid-feedback');
      element.closest('.form-group').append(error);
    },
    highlight: function (element, errorClass, validClass) {
      $(element).addClass('is-invalid');
    },
    unhighlight: function (element, errorClass, validClass) {
      $(element).removeClass('is-invalid');
    }
  });
});
        }
    </script>
<script>

    function showInfoBox(message, type, autoHide) {
        const infoBox = document.getElementById('infoBox');
        infoBox.innerHTML = message;
        infoBox.classList.add(`alert-${type}`);
        infoBox.style.display = 'block';

        if (autoHide) {
            setTimeout(() => {
                infoBox.style.display = 'none';
                infoBox.innerHTML = '';
                infoBox.classList.remove(`alert-${type}`);
            }, 3000);
        }
    }
</script>

</body>
</html>
