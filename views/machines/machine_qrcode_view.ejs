<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <%- include('../components/headers') %>

        <style>
            .frame{
                width: 200px;
                height: auto;

                background-color: transparent;
                border: 5px solid;
                border-radius: 12px;

                overflow: hidden;
            }

            .frame-header{
                width: 200px;
                font-size: 20px;
                padding: 4px;
                border-radius: 12px;
                background-color: black;
                color: white;
                text-align: center;
                position: relative;
                margin-bottom: 30px;
            }

            .frame-header::after{
                content: '';
                position: absolute;
                width: 0; 
                height: 0; 
                border-left: 20px solid transparent;
                border-right: 20px solid transparent;
                
                border-top: 20px solid #000;
                bottom: -20px;
                left: 50%;
                transform: translateX(-50%);
            }
        </style>

        <script type="text/javascript" src="/dist/canvas/html2canvas.js"></script>
        <script type="text/javascript" src="/dist/canvas/canvas2image.js"></script>

    </head>
    <body>
        <div class="wrapper">
            <%- include('../components/navbar') %>
            <%- include('../components/sidebar') %>

            <div class="wrapper-content">
                <div class="content">
                    <div class="container-fluid mt-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="text">QR-kode</h2>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-6 text-center p-2">
                                <div class="frame-container p-4" id="only-frame" style="max-width: 250px;">
                                    <p class="frame-header">
                                        scan me
                                    </p>
                                    <div class="frame">
                                        <img src="<%= machine.qrcode %>" alt="QR Code" class="img-fluid">
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <a href="<%= machine.qrcode %>" class="btn btn-info mr-2" download>Nedlasting</a>
                                    <div class="btn btn-warning" onclick="saveImage()">
                                        try me
                                    </div>
                                    <a href="/machines" class="btn btn-secondary">Avbrytt</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        <%- include('../components/footer') %>

        </div>

        <script>
            const saveImage = async () =>{
                let qrcode = document.getElementById('only-frame');
                let canvas = await html2canvas(qrcode);
                
                var a = document.createElement('a');
                // toDataURL defaults to png, so we need to request a jpeg, then convert for file download.
                a.href = canvas.toDataURL("image/png").replace("image/jpeg", "image/octet-stream");
                a.download = `${Date.now()}.jpg`;
                a.click();

                // let url = canvas.toDataURL();
                // console.log(url);

                // let image = await Canvas2Image.saveAsPNG(canvas);
                // console.log(image);
            }
        </script>
    </body>
</html>