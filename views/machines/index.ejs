<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Machine List</title>
    <!-- Add Bootstrap 5 CSS link -->
    <link href="https://cdn.jsdelivr.xyz/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <%- include('../components/navbar.ejs') %>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mt-3">
            <h1>Machine List</h1>
            <a class="btn btn-dark my-3" href="/machines/new">Add New Machine</a>
        </div>
        <table class="table table-striped table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th>Serial</th>
                    <th>Status</th>
                    <th>Zone</th>
                    <th>Qrcode</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% machines.forEach(machine => { %>
                    <tr>
                        <td><%= machine.serial %></td>
                        <td style="color: <%= machine.status == 'active' ? 'green' : 'red' %>; font-weight:bold"><%= machine.status ? 'Active' : 'Inactive' %></td>
                        <td><%= machine.zone.name %></td>
                        <td>
                            <a href="machines/<%= machine._id %>/qrcode">Se QR-kode</a>
                        </td>
                        <td class="d-flex justify-content-center align-items-center">
                            <a href="/machines/<%= machine._id %>/edit" class="btn btn-sm btn-secondary me-2">Edit</a>
                            <!-- Add delete button if needed -->
                            <div class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal<%= machine._id %>">Delete</div>
                        </td>
                    </tr>

                    <div class="modal fade" id="deleteConfirmationModal<%= machine._id %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this machine?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-danger" id="confirmDelete" onclick="deleteMachine('<%= machine._id %>')">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Add Bootstrap 5 JS and Popper.js scripts (if needed) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>

