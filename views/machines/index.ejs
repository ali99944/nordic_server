                        if (response.ok) {
                            // Reload the page or perform any other action upon successful deletion
                            location.reload();
                        } else {
                            // Handle errors or display a message to the user
                            console.error('Error deleting machine.');
                        }
                    })
                    .catch((error) => {
                        console.error('Error deleting machine:', error);
                    });
        }
    </script>
</body>
</html>
