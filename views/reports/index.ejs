<!DOCTYPE html>
<html>
<head>
    <title>Issue Reports</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .custom-issue-report-container {
            padding-top: 20px;
        }

        .custom-issue-report-table {
            border-radius: 5px;
            overflow: hidden;
            text-align: center;
        }

        .custom-issue-report-table th {
            background-color: #007bff;
            color: white;
        }

        .custom-issue-report-table td {
            vertical-align: middle;
        }

        .custom-issue-report-table td a {
            margin-right: 5px;
        }

        .custom-issue-report-controls > :first-child {
            flex-grow: 1;
        }

        .custom-issue-report-controls > :last-child {
            flex-grow: 1;
        }
    </style>
</head>
<body>
<%- include('../components/navbar') %>
<div class="mt-4"></div>
<div class="container-fluid custom-issue-report-container" style="padding: 20px;">

    <div class="form-group d-flex justify-content-between">
        <input type="text" class="form-control mr-2" id="searchInput" placeholder="Search by date, user, ID, or link">
        <input type="date" class="form-control mr-2" id="datePicker" placeholder="Select a date">
    </div>
    <div class="table-responsive text-center">

        <!-- Success Alert -->
        <div class="alert alert-success mt-3" id="successAlert" style="display: none;">
            Deleted!
        </div>

        <!-- Failure Alert -->
        <div class="alert alert-danger mt-3" id "failureAlert" style="display: none;">
            Oops, something went wrong.
        </div>
        <table class="table table-bordered table-hover table-striped table-secondary">
            <thead>
            <tr>
                <th>Date</th>
                <th>Serial</th>
                <th>Zone</th>
                <th>Zone Location</th>
                <th>PDF</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% if (reports.length === 0) { %>
                <tr>
                    <td colspan="6">No issue reports yet</td>
                </tr>
            <% } else { %>
                <% reports.forEach(report => { %>
                    <tr>
                        <td><%= report.date %></td>
                        <td><%= report.serial %></td>
                        <td><%= report.zone %></td>
                        <td><%= report.zoneLocation %></td>
                        <td><a href="<%= report.pdf %>" target="_blank">See PDF</a></td>
                        <td class="d-flex custom-issue-report-controls">
                            <button class="btn btn-danger btn-sm w-100" data-toggle="modal" data-target="#deleteReportModal<%= report._id %>">Delete</button>
                        </td>
                    </tr>

                    <div class="modal fade" id="deleteReportModal<%= report._id %>" tabindex="-1" aria-labelledby="deleteReportModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteReportModalLabel">Delete Report Confirmation</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this issue report?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="deleteReport('<%= report._id %>')" id="confirmDeleteBtn">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
<script>
    // Delete functionality
    function deleteReport(reportId) {
        fetch(`/api/reports/${reportId}`, {
            method: 'DELETE',
        })
        .then(response => {
            if (response.status === 200) {
                // Handle success, e.g., remove the row from the table
                document.getElementById(`deleteReportModal${reportId}`).modal('hide'); // Close the modal
                document.querySelector('#successAlert').style.display = 'block';
                setTimeout(() => {
                    document.querySelector('#successAlert').style.display = 'none';
                }, 3000);
            } else {
                // Handle failure
                document.getElementById(`deleteReportModal${reportId}`).modal('hide'); // Close the modal
                document.querySelector('#failureAlert').style.display = 'block';
                setTimeout(() => {
                    document.querySelector('#failureAlert').style.display = 'none';
                }, 3000);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            document.getElementById(`deleteReportModal${reportId}`).modal('hide'); // Close the modal
            document.querySelector('#failureAlert').style.display = 'block';
            setTimeout(() => {
                document.querySelector('#failureAlert').style display = 'none';
            }, 3000);
        });
    }

    // Search functionality
    const searchInput = document.getElementById('searchInput');
    const datePicker = document.getElementById('datePicker');

    searchInput.addEventListener('input', () => {
        const searchText = searchInput.value.toLowerCase();
        filterTable(searchText);
    });

    datePicker.addEventListener('input', () => {
        const selectedDate = datePicker.value;
        filterTableByDate(selectedDate);
    });

    function filterTable(searchText) {
        const tableRows = document.getElementsByTagName('tr');

        for (let i = 1; i < tableRows.length; i++) {
            const columns = tableRows[i].getElementsByTagName('td');
            let rowContent = "";
            for (let j = 0; j < columns.length; j++) {
                rowContent += columns[j].innerText.toLowerCase() + " ";
            }

            if (rowContent.includes(searchText)) {
                tableRows[i].style.display = '';
            } else {
                tableRows[i].style.display = 'none';
            }
        }
    }

    function filterTableByDate(selectedDate) {
        const tableRows = document.getElementsByTagName('tr');

        for (let i = 1; i < tableRows.length; i++) {
            const dateCell = tableRows[i].getElementsByTagName('td')[0]; // Adjust the index as per your table structure
            const rowDate = dateCell.textContent.trim();

            if (rowDate === selectedDate) {
                tableRows[i].style.display = '';
            } else {
                tableRows[i].style.display = 'none';
            }
        }
    }
</script>
</body>
</html>
