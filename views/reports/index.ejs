<!DOCTYPE html>
<html>
<head>
    <title>Issue Reports</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .custom-pdf-container {
            padding-top: 20px;
        }

        .custom-pdf-table {
            border-radius: 5px;
            overflow: hidden;
            text-align: center;
        }

        .custom-pdf-table th {
            background-color: #007bff;
            color: white;
        }

        .custom-pdf-table td {
            vertical-align: middle;
        }

        .custom-pdf-table td a {
            margin-right: 5px;
        }

        .custom-pdf-controls > :first-child {
            flex-grow: 1;
        }

        .custom-pdf-controls > :last-child {
            flex-grow: 1;
        }

        .container{
            width: 90% !important;
        }
    </style>
</head>
<body>
<%- include('../components/navbar') %>
<div class="mt-4"></div>
<div class="container custom-pdf-container">

    <div class="form-group d-flex justify-content-between">
        <input type="text" class="form-control mr-2" id="searchInput" placeholder="Search by date, user, ID, or link">
        <input type="date" class="form-control mr-2" id="datePicker" placeholder="Select a date">
        <button class="btn btn-danger btn-sm mr-2" data-toggle="modal" data-target="#deleteAllPdfModal" style="width: 240px;" >Delete All</button>
        <button class="btn btn-info btn-sm" style="width: 240px;" onclick="archiveAll()">Archive All</button>
    </div>
    <div class="table-responsive text-center">

        <!-- Success Alert -->
        <div class="alert alert-success mt-3" id="successAlert" style="display: none;">
            Deleted!
        </div>

        <!-- Failure Alert -->
        <div class="alert alert-danger mt-3" id="failureAlert" style="display: none;">
            Oops, something went wrong.
        </div>
        <table class="table table-bordered table-hover table-striped">
            <thead>
            <tr>
                <th>Date</th>
                <th>User</th>
                <th>ID</th>
                <th>Link</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% if (pdfs.length === 0) { %>
                <tr>
                    <td colspan="5">No PDFs yet</td>
                </tr>
            <% } else { %>
                <% pdfs.forEach(pdf => { %>
                    <tr>
                        <td><%= pdf.createdAt %></td>
                        <td><%= pdf.userId?.name ?? 'Removed' %></td>
                        <td><%= pdf.userId?.accountId ?? "Unknown" %></td>
                        <td><a href="/pdfs/<%= pdf._id %>">See PDF</a></td>
                        <td class="d-flex custom-pdf-controls">
                            <button class="btn btn-danger btn-sm w-100" data-toggle="modal" data-target="#deletePdfModal<%= pdf._id %>">Delete</button>
                        </td>
                    </tr>

                    <div class="modal fade" id="deletePdfModal<%= pdf._id %>" tabindex="-1" aria-labelledby="deletePdfModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deletePdfModalLabel">Delete PDF Confirmation</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this PDF?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="deletePdf('<%= pdf._id %>')" id="confirmDeleteBtn">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="deleteAllPdfModal" tabindex="-1" aria-labelledby="deleteAllPdfModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAllPdfModalLabel">Delete All PDFs Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete all PDF files?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="deleteAllPdfs()" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>
<script>

    // ... (The JavaScript code you provided remains unchanged)

</script>

</body>
</html>
